# FlowCoach v2 Configuration

# Required API Keys
CLAUDE_API_KEY=your_claude_api_key_here
TODOIST_API_TOKEN=your_todoist_token_here

# Optional Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# FlowCoach Settings
FC_DEFAULT_PROJECT=inbox_project_id
FC_LABEL_MODE=labels
# Options: labels (use @t_2min labels) or prefix (use [2min] prefixes)

FC_TIME_BUCKETS=2min:5,10min:15,30plus:16
# Format: bucket_name:max_minutes (optional customization)

# Database
FC_DB_PATH=./flowcoach.db

# Logging
LOG_LEVEL=info